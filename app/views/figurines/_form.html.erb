<%= form_with model: @figurine do |form| %>
  <div>
    <%= form.label "Nom" %><br>
    <%= form.text_field :name %>
    <% @figurine.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label "Commentaire" %><br>
    <%= form.text_area :comment %>
    <% @figurine.errors.full_messages_for(:comment).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit "Enregistrer" %>
  </div>
<% end %>
