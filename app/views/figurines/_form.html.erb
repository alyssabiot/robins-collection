<%= form_with model: figurine do |f| %>
  <div class="mb-3">
    <%= f.label "Nom", class: "form-label" %><br>
    <%= f.text_field :name, class: "form-control" %>
    <% figurine.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.label "Univers", class: "form-label" %><br>
    <%= f.collection_select :universe_id, Universe.all, :id, :name, {include_blank: true}, {class: "form-select"} %>
    <% figurine.errors.full_messages_for(:universe_id).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.label "Espèce", class: "form-label" %><br>
    <%= f.collection_select :family_id, Family.all, :id, :name, {include_blank: true}, {class: "form-select"} %>
    <% figurine.errors.full_messages_for(:family_id).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.label "Classes", class: "form-label" %><br>
    <div class="checkboxes-group">
      <%= f.collection_check_boxes :speciality_ids, Speciality.all, :id, :name do |speciality| %>
        <div class="form-check">
          <%= speciality.label do %>
            <%= speciality.check_box class: 'form-check-input' %>
            <%= speciality.text %>
          <% end %>
        </div>
      <% end %>
    </div>
    <% figurine.errors.full_messages_for(:speciality_ids).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.label "Commentaire", class: "form-label" %><br>
    <%= f.text_area :comment, class: "form-control" %>
    <% figurine.errors.full_messages_for(:comment).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.label "Image de référence", class: "form-label" %><br>
    <%= render "picture_name", picture: figurine.reference_picture %>
    <%= f.file_field :reference_picture, class: "form-control-file" %>
    <% figurine.errors.full_messages_for(:reference_picture).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.label "Figurine peinte", class: "form-label" %><br>
    <%= render "picture_name", picture: figurine.painted_picture %>
    <%= f.file_field :painted_picture, class: "form-control-file" %>
    <% figurine.errors.full_messages_for(:painted_picture).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.label "Artiste", class: "form-label" %><br>
    <%= f.collection_select :artist_id, Artist.all, :id, :name, {include_blank: true}, {class: "form-select"} %>
    <% figurine.errors.full_messages_for(:artist_id).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.label "Portrait", class: "form-label" %><br>
    <%= render "picture_name", picture: figurine.portrait %>
    <%= f.file_field :portrait, class: "form-control-file" %>
    <% figurine.errors.full_messages_for(:portrait).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= f.submit "Enregistrer", class: "btn btn-dark" %>
  </div>
<% end %>
