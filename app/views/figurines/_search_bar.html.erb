<%= form_tag figurines_path, method: :get, class: "d-flex" do %>
  <div class="hidden">
    <%= text_field_tag :direction, params[:direction] %>
    <%= text_field_tag :sort, params[:sort] %>
  </div>
  <%= text_field_tag :search, params[:search], class: "form-control me-2" %>
  <%= submit_tag "Chercher", class: "btn btn-outline-dark" %>
<% end %>
