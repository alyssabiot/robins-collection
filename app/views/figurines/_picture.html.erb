<% if picture.present? %>
  <%= link_to rails_blob_path(picture, disposition: "attachment"), class: "download-picture", 'data-bs-toggle' => "tooltip", title: "Télécharger l'image" do %>
    <%= image_tag picture.variant(resize_to_limit: [500, 500]), class: "img-fluid" %>
  <% end %>
<% else %>
  <p class="missing-picture"><i class='fa fa-camera'></i> Image manquante</p>
<% end %>
