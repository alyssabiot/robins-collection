<h1>Liste des figurines</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Nom</th>
      <th scope="col">Univers</th>
      <th scope="col">Peinte ?</th>
      <th scope="col">Réservée ?</th>
      <th scope="col">Portrait terminé ?</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @figurines.each do |figurine| %>
      <tr>
        <th scope="row"><%= figurine.name %></th>
        <td><%= figurine.universe&.name %></td>
        <td><%= display_boolean(figurine.painted?) %></td>
        <td><%= display_boolean(figurine.reserved?) %></td>
        <td><%= display_boolean(figurine.portrayed?) %></td>
        <td><%= link_to "Voir la fiche", figurine %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Ajouter une figurine", new_figurine_path, class: "btn btn-dark" %>
