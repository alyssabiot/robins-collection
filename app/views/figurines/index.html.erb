<h1>Liste des figurines (<%= @total %>)</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col"><%= sortable "name", display_order_arrow("Nom") %></th>
      <th scope="col"><%= sortable "universes.name", display_order_arrow("Univers") %></th>
      <th scope="col"><%= sortable "is_painted", display_order_arrow("Peinte ?") %></th>
      <th scope="col"><%= sortable "has_artist", display_order_arrow("Attribuée ?") %></th>
      <th scope="col"><%= sortable "has_portrait", display_order_arrow("Portrait terminé ?") %></th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @figurines.each do |figurine| %>
      <tr>
        <th scope="row"><%= figurine.name %></th>
        <td><%= figurine.universe&.name %></td>
        <td><%= display_boolean(figurine.is_painted) %></td>
        <td><%= display_boolean(figurine.has_artist) %></td>
        <td><%= display_boolean(figurine.has_portrait) %></td>
        <td><%= link_to "Voir la fiche", figurine %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class='list-actions'>
  <%= paginate @figurines %>
  <%= link_to "Ajouter une figurine", new_figurine_path, class: "btn btn-dark" %>
</div>
