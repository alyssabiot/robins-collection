<h1>Liste des univers</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Nom</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @universes.each do |universe| %>
      <tr>
        <th scope="row"><%= universe.name %></th>
        <td><%= link_to "Modifier", edit_universe_path(universe) %> |
            <%= link_to "Supprimer", universe_path(universe), method: :delete, data: { confirm: "Etes-vous sÃ»r ?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class='list-actions'>
  <%= paginate @universes %>
  <%= link_to "Ajouter un univers", new_universe_path, class: "btn btn-dark" %>
</div>
