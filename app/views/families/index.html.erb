<h1>Liste des espèces</h1>

<div class='list-actions'>
  <%= paginate @families %>
  <%= link_to "Ajouter une espèce", new_family_path, class: "btn btn-dark" %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Nom</th>
      <th scope="col">Nb de figurines</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @families.each do |family| %>
      <tr>
        <th scope="row"><%= family.name %></th>
        <td><%= family.figurines.count %></td>
        <td><%= link_to "Modifier", edit_family_path(family) %> |
            <%= link_to "Supprimer", family_path(family), method: :delete, data: { confirm: "Confirmer la suppression ?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
